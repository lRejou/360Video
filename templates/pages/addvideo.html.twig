{% extends 'base.html.twig'%}


{% block stylesheets %}  
    <link href="{{ asset('css/addvideo.css') }}" rel="stylesheet" />
{% endblock %}


{% block body%}

<div id="container">

    <div class="addvideo-haut">
        <h1>Poster votre vidéo</h1>
        <p>
            Postez votre video 360° sur cette page grace au lien youtube
            <br>
            Votre video devra etre validé par un administrateur avant sa mise en ligne sur notre site
        </p>
        </div>

    <div class="container-addvideo">
        <div class="addvideo-form">
            <form action="{{ path('validation') }}" method="post" name="formulaire_addvideo">
                <div>
                    <span>Votre pseudo</span>
                    <input type="text" name="pseudo" required="required"/>
                </div>
                <div>
                    <span>Titre de la vidéo</span>
                    <input type="text" name="titre" required="required"/>
                </div>
                <div>
                    <span>Lien de la vidéo (Youtube)</span>
                    <input type="text" name="link" required="required"/>
                </div>
                <div>
                    <span>Description de la vidéo</span>
                    <textarea name="description" required="required"></textarea>
                </div>
                <div class="addvideo-cgu">
                    <input type="checkbox" name="cgu"><span class="spancgu">J'accepte les <a href="/cgu" >Condiction Général d'utilisation</a></span>
                </div>
                <div>
                    captcha
                </div>
                <div>
                    <input class="button1" name="validation" type="submit" value="Poster"/>
                </div>
            </form>
        </div>
        <div class="addvideo-tuto">
            <div>
                <span>Comment faire une video 360° ?<span>
                <p>Apprener à faire une video 360° </p>
                <a href="/tuto" class="button1" >Tutoriel</a>
            </div>
        </div>
    
    </div>


</div>

{% endblock %}